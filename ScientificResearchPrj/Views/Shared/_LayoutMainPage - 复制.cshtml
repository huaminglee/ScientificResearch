<!DOCTYPE html>
<html lang="zh">
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <meta charset="utf-8" />
    <title>@ViewBag.Title</title>
    <link href="~/favicon.ico" rel="shortcut icon" type="image/x-icon" />
    <meta name="viewport" content="width=device-width" />

    
    <!-- Custom styles for this template -->
    @Styles.Render("~/Content/layoutmainpage/share/css")

    <!-- Jquery EasyUI styles for this template 用于tabs标签页-->
    <link rel="stylesheet" type="text/css" href="~/Content/jquery-easyui-1.4.1/themes/default/easyui.css">
    <link rel="stylesheet" type="text/css" href="~/Content/jquery-easyui-1.4.1/themes/icon.css">

    <!-- bootstrap styles for this template -->
    <link href="~/Content/bootstrap/css/bootstrap.css" rel="stylesheet" />


</head>
<body>
    <header>
        <div>
            <span class="header_logo"><img src="../../Images/logo.png" alt="Logo" width="100" /></span>
            <span class="header_welcome"><a href="#">Keith</a>(科研管理员)欢迎您进入本系统!&nbsp;&nbsp;<a href="#">修改密码</a>&nbsp;&nbsp;<a href="#">退出</a></span>
        </div>
        <div class="row">
            <div class="col-lg-2 header_search">
                <div class="input-group ">
                    <input type="text" class="form-control" placeholder="全站搜索">
                    <span class="input-group-btn">
                        <button class="btn btn-default" type="button">Go!</button>
                    </span>
                </div><!-- /input-group -->
            </div><!-- /.col-lg-6 -->
        </div><!-- /.row -->
        <div class="header_nav">
        </div>
    </header>


    <section>
        <div class="section_inner">
            <div class="menu_left">
                @RenderSection("menu_left", required: true)
            </div>
            <div class="content_right">
                <div class="inner">@RenderSection("content_right", required: true)</div>
            </div>
            @RenderBody()
        </div>
    </section>


    

    <footer>
        <div>&copy; Keith</div>
    </footer>




    <!-- Placed at the end of the document so the pages load faster 用于控制页面基本js属性-->
    <script src="~/Scripts/jquery-2.1.1.js" type="text/javascript"></script>
    <script src="~/Content/bootstrap/js/bootstrap.js" type="text/javascript"></script>

    <!--Jquery EasyUI  js文件   用于tabs标签页-->
    <script type="text/javascript" src="~/Content/jquery-easyui-1.4.1/jquery.easyui.min.js"></script>

    @RenderSection("necessary_js", required: true)
    
</body>
</html>